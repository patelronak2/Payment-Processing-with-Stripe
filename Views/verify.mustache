{{>header}}
<div class="container my-5">
    <h1>Verify Your Number</h1>
    <p>Enter the verification code received on your phone</p>
    <div class="card my-5">
        <div class="card-body">
            {{#error}}
                <div class="alert alert-danger" role="alert">
                    {{message}}
                </div>
            {{/error}}
            <form action="/verify" method="POST">
                <div class="form-group row">
                    <label for="verifyCode" class="col-sm-2 col-form-label font-weight-bold">Enter Code</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" id="verifyCode" name="verifyCode" required>
                    </div>
                </div>
                <div class="form-group row mb-0">
                    <div class="col-sm-10 offset-sm-2">
                        <button type="submit" class="btn btn-primary">
                            Verify
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

{{>footer}}